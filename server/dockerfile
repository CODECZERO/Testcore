# Use an official Node.js image as the base
FROM node:18

# Install Nginx (or any other necessary system dependencies)
RUN apt-get update && apt-get install -y nginx && rm -rf /var/lib/apt/lists/*

# Set the working directory inside the container
WORKDIR /app

# Copy package.json and package-lock.json to install dependencies
COPY package*.json ./

# Install dependencies (lincluding dev dependencies for TypeScript)
RUN npm install

# Copy application files for TypeScript compilation
COPY . .

# Compile TypeScript code
RUN npm run build && rm -rf src tsconfig.json

# Copy the Nginx configuration file
COPY nginx.conf /etc/nginx/nginx.conf

# Set environment variables (you can define more in Renderâ€™s environment settings)
ENV NODE_ENV=production

# Expose the port (assuming the app runs on PORT defined in Render)
EXPOSE 10000

# Start the app and Nginx
CMD ["sh", "-c", "service nginx start && node dist/app.js"]
