FROM ubuntu:20.04
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies including Python and pip
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    build-essential \
    bash \
    software-properties-common \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 22.x repository and install Node.js and npm
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get install -y nodejs

# Verify Node.js and npm installation
RUN node -v && npm -v

# Set the working directory
WORKDIR /app

# Copy application dependencies
COPY package*.json ./

# Install npm dependencies
RUN npm install

# Copy Prisma folder (including migrations and schema)
COPY prisma ./prisma

# Generate Prisma Client (this ensures Prisma client is generated)
RUN npx prisma generate


# Copy application files
COPY dist ./dist

# Copy Nginx configuration file
COPY nginx.conf /etc/nginx/nginx.conf

# Set environment variables
ENV NODE_ENV=production

# Expose the application port
EXPOSE 10000

# Start Nginx and the Node.js app
CMD ["sh", "-c", "service nginx start && node dist/app.js"]
