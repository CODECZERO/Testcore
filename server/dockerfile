
# Use an official Node.js image as the base
FROM node:18

# Install Nginx
RUN apt-get update && apt-get install -y nginx && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy only necessary files
COPY package*.json tsconfig.json ./

# Install dependencies (lincluding dev dependencies for TypeScript)
RUN npm install

# Copy application files for TypeScript compilation
COPY . .

# Compile TypeScript code
RUN npm run build

# Copy the Nginx configuration file
COPY nginx.conf /etc/nginx/nginx.conf

# Expose ports
EXPOSE 10000

# Set environment variables (can also use Docker Compose or Render environment settings)
ENV NODE_ENV=production

# Install only production dependencies after removing dev files


RUN npm prune --production

# Start both Nginx and the Node.js app
CMD ["sh", "-c", "service nginx start && node dist/app.js"]
