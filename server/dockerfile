FROM ubuntu
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    build-essential \
    bash \
    software-properties-common

# Install NVM (Node Version Manager)
ENV NVM_DIR=/root/.nvm
RUN curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash

# Install Node.js and npm via NVM
RUN /bin/bash -c "source $NVM_DIR/nvm.sh && nvm install 22 && nvm alias default 22"

# Set environment variables for Node.js and npm
ENV NODE_VERSION=22
ENV NODE_PATH=$NVM_DIR/versions/node/v$NODE_VERSION/lib/node_modules
ENV PATH=$NVM_DIR/versions/node/v$NODE_VERSION/bin:$PATH

# Verify Node.js and npm installation
RUN /bin/bash -c "node -v && npm -v"

# Set the working directory
WORKDIR /app

# Copy application dependencies
COPY package*.json ./

# Install npm dependencies
RUN /bin/bash -c "npm install"

# Generate Prisma Client (this ensures Prisma client is generated)
RUN /bin/bash -c "npx prisma generate"

# Copy Prisma folder (including migrations and schema)
COPY prisma ./prisma

# Copy application files
COPY dist ./dist

# Copy Nginx configuration file
COPY nginx.conf /etc/nginx/nginx.conf

# Set environment variables
ENV NODE_ENV=production

# Expose the application port
EXPOSE 10000

# Start Nginx and the Node.js app
CMD ["sh", "-c", "service nginx start && node dist/app.js"]
