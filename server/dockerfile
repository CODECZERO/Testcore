# Use an official Node.js image as the base
FROM node:18

# Install system dependencies (e.g., Nginx)
RUN apt-get update && apt-get install -y nginx && rm -rf /var/lib/apt/lists/*

# Set the working directory inside the container
WORKDIR /app

# Copy package.json and package-lock.json to install dependencies
COPY package*.json ./

# Install all dependencies (including Prisma)
RUN npm install

# Generate Prisma Client (this step ensures Prisma client is generated)


# Copy the Prisma folder (including migrations and schema)
COPY prisma ./prisma

# Copy precompiled code (dist folder)
COPY dist ./dist

# Copy the Nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Set environment variables (you can define more in Renderâ€™s environment settings)
ENV NODE_ENV=production

# Expose the port (assuming the app runs on PORT defined in Render)
EXPOSE 10000

# Start the app and Nginx
CMD ["sh", "-c", "service nginx start && node dist/app.js"]
